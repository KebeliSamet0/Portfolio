---
export interface Props {
  project: {
    id: string;
    title: string;
    platform: string;
    role: string;
    tech: string[];
    description: string;
    video: string;
    aspectRatio: string;
    links?: Record<string, string>;
  }
}

const { project } = Astro.props;

const isMobile = project.aspectRatio === "9:16";

// For gradient placeholder uniqueness
const gradientIndex = project.id.length % 3;
const gradients = [
    "from-purple-900/40 to-black",
    "from-blue-900/40 to-black",
    "from-emerald-900/40 to-black"
];
const gradient = gradients[gradientIndex];
---

<article class="group relative flex flex-col bg-surface rounded-xl overflow-hidden border border-surface/50 hover:border-accent-glow transition-all duration-300 hover:-translate-y-2 shadow-lg hover:shadow-[0_10px_30px_rgba(0,240,255,0.15)] reveal">
    
    <!-- Video Container -->
    <div class:list={[
        "relative w-full overflow-hidden cursor-pointer video-wrapper flex items-center justify-center",
        `bg-gradient-to-br ${gradient}`,
        isMobile ? "aspect-[9/16] max-h-[420px]" : "aspect-video"
    ]}>
        <div class="absolute inset-0 flex items-center justify-center z-10 pointer-events-none group-hover:scale-110 transition-transform duration-300 play-button text-accent">
            <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="currentColor" class="opacity-80 drop-shadow-lg"><path d="M8 5v14l11-7z"/></svg>
        </div>
        
        <video 
            src={`${import.meta.env.BASE_URL}videos/${project.video}`} 
            class:list={[
                "w-full h-full opacity-80 group-hover:opacity-100 transition-opacity duration-300",
                isMobile ? "object-contain" : "object-cover"
            ]}
            preload="metadata"
            playsinline
            controls
            onplay="this.closest('.video-wrapper').querySelector('.play-button').style.display='none'"
            onpause="this.closest('.video-wrapper').querySelector('.play-button').style.display='flex'"
        ></video>
    </div>

    <!-- Content -->
    <div class="p-5 sm:p-6 flex flex-col flex-grow">
        <div class="flex justify-between items-start mb-2">
            <div>
                <h3 class="text-lg sm:text-xl font-bold text-white group-hover:text-accent transition-colors">{project.title}</h3>
                <p class="text-xs sm:text-sm font-medium text-accent mt-1">{project.role} &middot; {project.platform}</p>
            </div>
            
            <!-- Links -->
            {project.links && (
                <div class="flex gap-3">
                    {project.links.github && (
                        <a href={project.links.github} target="_blank" rel="noopener noreferrer" class="text-text-muted hover:text-accent transition-colors" aria-label="GitHub">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"/><path d="M9 18c-4.51 2-5-2-7-2"/></svg>
                        </a>
                    )}
                    {project.links.play && (
                        <a href={project.links.play} target="_blank" rel="noopener noreferrer" class="flex items-center gap-1.5 px-3 py-1 bg-accent/10 border border-accent/30 text-accent text-xs font-medium rounded-md hover:bg-accent/20 transition-colors" aria-label="Oyna">
                            <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="currentColor"><polygon points="5 3 19 12 5 21 5 3"/></svg>
                            Oyna
                        </a>
                    )}
                </div>
            )}
        </div>

        <p class="text-text-muted text-xs sm:text-sm mb-4 sm:mb-6 flex-grow leading-relaxed">
            {project.description}
        </p>

        <!-- Tech Stack -->
        <ul class="flex flex-wrap gap-1.5 sm:gap-2 mt-auto">
            {project.tech.map((t: string) => (
                <li class="px-2 py-0.5 sm:px-2.5 sm:py-1 text-[10px] sm:text-xs font-mono text-accent bg-accent/5 border border-accent/20 rounded-md">
                    {t}
                </li>
            ))}
        </ul>
    </div>
</article>

<script>
    // Custom logic to handle click to play since we layered a play button
    document.querySelectorAll('.video-wrapper').forEach(wrapper => {
        const video = wrapper.querySelector('video');
        if (!video) return;
        wrapper.addEventListener('click', (e) => {
            // Prevent interference if clicking native controls
            if (e.target !== video) {
                if (video.paused) {
                    video.play();
                } else {
                    video.pause();
                }
            }
        });
    });
</script>
